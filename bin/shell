#!/usr/bin/env bash

# This is development util
main() {
    local wpVersion="${1:-latest}"
    docker run \
        --init \
        --entrypoint="/bin/bash" \
        --workdir="/app" \
        --rm \
        -it \
        -v "${PWD}/src/init-utils:/app" \
        "ghcr.io/n0rthernl1ghts/wordpress:${wpVersion}"
}

main "${@}"
